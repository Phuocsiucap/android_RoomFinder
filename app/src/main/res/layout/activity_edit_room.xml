<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:elevation="4dp"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Chỉnh sửa bài đăng"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </RelativeLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Trạng thái -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@drawable/edit_text_background">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đang hiển thị"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <Switch
                    android:id="@+id/switchAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

            <!-- Tiêu đề -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiêu đề"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="12dp"
                android:hint="Nhập tiêu đề bài đăng"
                android:textSize="14sp"
                android:inputType="text"
                android:layout_marginBottom="16dp" />

            <!-- Mô tả -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:hint="Mô tả chi tiết về phòng trọ"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:layout_marginBottom="16dp" />

            <!-- Giá -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá (VNĐ/tháng)"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="12dp"
                android:hint="Ví dụ: 3500000"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_marginBottom="16dp" />

            <!-- Diện tích -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diện tích (m²)"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etArea"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="12dp"
                android:hint="Ví dụ: 25"
                android:textSize="14sp"
                android:inputType="numberDecimal"
                android:layout_marginBottom="16dp" />

            <!-- Địa chỉ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="12dp"
                android:hint="Số nhà, đường"
                android:textSize="14sp"
                android:inputType="text"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etDistrict"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:paddingHorizontal="12dp"
                    android:hint="Quận/Huyện"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etCity"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:paddingHorizontal="12dp"
                    android:hint="Tỉnh/Thành phố"
                    android:textSize="14sp"
                    android:inputType="text" />

            </LinearLayout>

            <!-- Tiện ích -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiện ích"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điều hòa"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipParking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chỗ để xe"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipBathroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WC riêng"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipKitchen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bếp"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSecurity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="An ninh"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Hình ảnh -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình ảnh (tối đa 5 ảnh)"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:id="@+id/layoutImages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Add Image Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnAddImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#F5F5F5">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_add"
                                app:tint="#757575" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thêm ảnh"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Update Button -->
            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cập nhật bài đăng"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:background="@drawable/button_primary_background"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
