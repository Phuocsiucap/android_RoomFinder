<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Room Image -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/imgRoom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:contentDescription="Room image" />

            <!-- Favorite Icon -->
            <ImageView
                android:id="@+id/imgFavorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="6dp"
                android:src="@drawable/ic_favorite"
                android:background="@drawable/favorite_background"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp"
                android:contentDescription="Favorite" />

        </RelativeLayout>

        <!-- Room Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvRoomTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phòng trọ - Gò Vấp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvRoomPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.500.000 vnđ"
                android:textSize="13sp"
                android:textColor="#E91E63"
                android:textStyle="bold"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvRoomLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quận 1, TP.HCM"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>