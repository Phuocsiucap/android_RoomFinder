<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <!-- Thumbnail (có thể thêm sau) -->
        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_gallery"
            android:background="#E0E0E0"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <!-- Content -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivThumbnail"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Title & Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tiêu đề tin đăng"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang hiển thị"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/bg_status_active"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Price -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,500,000 đ"
                android:textSize="18sp"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <!-- Address -->
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Đường ABC, Quận 1"
                android:textSize="14sp"
                android:textColor="#616161"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="4dp"
                android:layout_marginBottom="8dp"/>

            <!-- Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 ngày trước"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:drawableStart="@android:drawable/ic_menu_agenda"
                    android:drawablePadding="4dp"/>

                <TextView
                    android:id="@+id/tvViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 10 lượt xem"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:drawableStart="@android:drawable/ic_menu_view"
                    android:drawablePadding="4dp"
                    android:layout_marginStart="16dp"/>

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <!-- Action Buttons (Mini) -->
                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Sửa"
                    android:layout_marginStart="4dp"/>

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Xóa"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>