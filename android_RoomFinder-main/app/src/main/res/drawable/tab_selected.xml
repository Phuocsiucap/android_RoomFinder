<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi được chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#4285F4"/> <!-- nền xanh -->
            <corners android:radius="5dp"/> <!-- bo góc giống style -->
            <stroke android:width="0dp" android:color="@android:color/transparent"/>

        </shape>
    </item>

    <!-- Khi không chọn -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0"/> <!-- nền giống style -->
            <corners android:radius="5dp"/> <!-- bo góc -->
            <stroke android:width="1dp" android:color="#E0E0E0"/> <!-- viền giống style -->
        </shape>
    </item>
</selector>
