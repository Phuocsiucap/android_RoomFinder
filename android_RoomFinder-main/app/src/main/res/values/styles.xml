<resources>
    <style name="RatingBarYellow" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/starYellow</item>
    </style>

    <style name="ReviewTag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@drawable/tag_background</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Admin text styles -->
    <style name="AdminTextTitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="AdminTextTitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
    </style>
    <style name="FilterButton3Cols" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_weight">1</item> <item name="android:textSize">12sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>

        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>


        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@null</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#E0E0E0</item>
    </style>
    <style name="FilterButton3Cols.Selected" parent="FilterButton3Cols">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@null</item>
        <item name="strokeWidth">0dp</item>
    </style>
    <style name="AdminTextBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="AdminTextCaption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#757575</item>
    </style>
</resources>