<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="#1976D2"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/txtUserInitial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="U"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUserName"
                style="@style/AdminTextTitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người dùng" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_email"
                    android:tint="#757575"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/txtUserEmail"
                    style="@style/AdminTextBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@example.com" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="#9E9E9E"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/txtUserCreated"
                    style="@style/AdminTextCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày tạo: --" />
            </LinearLayout>
        </LinearLayout>

        <!-- Block / Unblock Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBlockUser"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FF9800"
            android:layout_marginStart="8dp">

            <ImageButton
                android:id="@+id/btnDeleteUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_lock_lock"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:tint="#FFFFFF"
                android:contentDescription="Khóa/Mở khóa người dùng" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>

