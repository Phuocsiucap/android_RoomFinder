<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo tin đăng mới"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiêu đề"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:hint="Nhập tiêu đề bài đăng"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Mô tả -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:hint="Mô tả chi tiết về phòng trọ"
            android:textSize="14sp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginBottom="16dp" />

        <!-- Giá -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá (VNĐ/tháng)"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:hint="Ví dụ: 3500000"
            android:textSize="14sp"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Diện tích -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diện tích (m²)"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etArea"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:hint="Ví dụ: 25"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Tiện ích -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiện ích"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupAmenities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            android:layout_marginBottom="16dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wifi"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Máy lạnh"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bãi đỗ xe"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WC riêng"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipKitchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bếp"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="An ninh"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:checkable="true" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Ảnh -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ảnh"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/layoutImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Add Image Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnAddImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F5F5F5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_add"
                            android:tint="@android:color/darker_gray" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Địa chỉ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/ettAddress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="12dp"
                android:hint="Nhập địa chỉ chi tiết"
                android:textSize="14sp"
                android:inputType="text" />

        </LinearLayout>

        <!-- Quận/Huyện -->
        <EditText
            android:id="@+id/etDistrict"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:hint="Quận/Huyện"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_marginBottom="8dp" />

        <!-- Thành phố -->
        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:hint="Thành phố"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_marginBottom="24dp" />

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Đăng tin"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>
